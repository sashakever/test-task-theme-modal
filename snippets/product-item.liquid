{% comment %}
  Renders product item

  Accepts:
  - product: {Object} main product

  Usage:
  {% render 'product-item', product: product %}
{% endcomment %}

<style>
    .product-item {
        display: flex;
        gap: 10px;

        font-family: Inter;
        text-underline-position: from-font;
        text-decoration-skip-ink: none;
    }

    .product-item__image img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: top;
    }

    .product-item__title {
        font-size: 14px;
        font-weight: 700;
        line-height: 24px;
        text-align: left;
        color: #262C3E;

        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        margin: 0;
    }

    .product-item__image {
        width: 88px;
        height: 100px;
        position: relative;
    }

    .product-item__content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .product-item__sku {
        font-size: 12px;
        font-weight: 400;
        line-height: 14px;
        text-align: left;
    }

    .product-item__type {
        font-size: 12px;
        font-weight: 400;
        line-height: 16px;
        text-align: left;
        margin: 0;
    }

</style>

<div class="product-item">
    <div class="product-item__image">
        {{
        product.featured_media.preview_image
        | image_url: width: 90
        | image_tag:
        loading: 'lazy',
        sizes: sizes,
        widths: '54, 74, 104',
        alt: product.featured_media.featured_media.alt
        | escape
        }}
    </div>
    <div class="product-item__content">
        <div>
            <h5 class="product-item__title">{{ product.title }}</h5>
            <p class="product-item__type">{{ product.type }}</p>
        </div>
        <p class="product-item__sku">SKU: {{ product.selected_or_first_available_variant.sku }}</p>
        {% render 'price-new', product: product %}
    </div>
</div>